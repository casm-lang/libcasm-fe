    assert true < true
    //~^ operands of operator `<` must be Integer, Floating or Rational but were Boolean

    assert true > true
    //~^ operands of operator `>` must be Integer, Floating or Rational but were Boolean

    assert true <= true
    //~^ operands of operator `<=` must be Integer, Floating or Rational but were Boolean

    assert true >= true
    //~^ operands of operator `>=` must be Integer, Floating or Rational but were Boolean
}
