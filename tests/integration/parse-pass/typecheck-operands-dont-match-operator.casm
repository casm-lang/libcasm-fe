CASM test

init main

rule main = {
    assert true + true
    //~^ operands of operator `+` must be Integer, Floating or Rational but were Boolean

    assert true - true
    //~^ operands of operator `-` must be Integer, Floating or Rational but were Boolean

    assert true * true
    //~^ operands of operator `*` must be Integer, Floating or Rational but were Boolean

    assert true / true
    //~^ operands of operator `/` must be Integer, Floating or Rational but were Boolean

    assert true % true
    //~^ operands of operator `%` must be Integer but were Boolean

    assert true div true
    //~^ operands of operator `div` must be Integer but were Boolean
